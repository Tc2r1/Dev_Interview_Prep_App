<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryDarkColor"
    tools:context="com.interviewprep.moshi_androidlion48.ui.questions.DialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        android:padding="8dp"
        android:elevation="8dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/secondary_gradient"
            android:padding="8dp">

            <TextView
                android:id="@+id/short_ans_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/secondaryTextColor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:text="Ligula ullamcorper malesuada proin libero nunc consequat interdum varius sit?"/>

            <TextView
                android:id="@+id/details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@id/short_ans_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Integer quis auctor elit sed vulputate mi sit amet mauris. Pulvinar etiam non quam lacus suspendisse faucibus. Ullamcorper malesuada proin libero nunc. Ut faucibus pulvinar elementum integer enim neque volutpat. Nisi lacus sed viverra tellus. Quisque id diam vel quam elementum. Amet massa vitae tortor condimentum lacinia quis. Fermentum posuere urna nec tincidunt praesent. Dolor purus non enim praesent elementum facilisis leo." />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
